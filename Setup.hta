<!doctype html>

<head>
	<meta charset="utf-8">

	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>Context Menu Tools</title>
	<meta name="description" content="Context Menu Tools">
	<meta name="author" content="Ehryk Menze">
	
	<HTA:APPLICATION 
		ID="1.0" 
		APPLICATIONNAME="Context Menu Tools" 
		BORDER="no" 
		CAPTION="no" 
		SHOWINTASKBAR="yes" 
		SINGLEINSTANCE="yes" 
		SYSMENU="yes" 
		SCROLL="no" 
		ICON="Images/ContextMenuTools.ico" 
		WINDOWSTATE="normal">
		
	<SCRIPT LANGUAGE="VBScript">

		Sub Window_onLoad
			strComputer = "."
			Set objWMIService = GetObject("winmgmts:\\" & strComputer & "\root\cimv2")
			Set colItems = objWMIService.ExecQuery("Select * From Win32_DesktopMonitor")
			For Each objItem in colItems
				intHorizontal = objItem.ScreenWidth
				intVertical = objItem.ScreenHeight
			Next
			intLeft = (intHorizontal - 900) / 2
			intTop = (intVertical - 600) / 2
			window.resizeTo 900,600
			window.moveTo intLeft, intTop
		End Sub 

	</SCRIPT>
	  
	<style type="text/css">
		html, body
		{
			height:100%;
		}
		
		.container
		{
			max-height: 100%;
			min-height: 100%;
			height: auto !important;
			height: 100%;
			margin: 0 auto -1em;
			overflow: visible;
		}
		
